<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<TabPane fx:id="window" fx:controller="io.github.davidstevenrose.Controller"
  tabClosingPolicy="UNAVAILABLE"
  xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.0">
  <Tab text="Product Line">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
      <GridPane prefHeight="105.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label styleClass="productLineLabel" text="Product Name"/>
        <TextField fx:id="productTxt" prefHeight="25.0" prefWidth="250.0"
          GridPane.columnIndex="1"/>
        <Label styleClass="productLineLabel" text="Manufacturer" GridPane.rowIndex="1"/>
        <TextField fx:id="manufactureProd" prefHeight="25.0" prefWidth="250.0"
          GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label styleClass="productLineLabel" text="Item Type" GridPane.rowIndex="2"/>
        <ChoiceBox fx:id="typeBox" prefWidth="150.0" GridPane.columnIndex="1"
          GridPane.rowIndex="2"/>
      </GridPane>
      <Button fx:id="addProductBtn" layoutX="8" layoutY="126" mnemonicParsing="false"
        text="Add Product"/>
      <Label layoutX="14.0" layoutY="186.0" text="Existing Products"/>
      <TableView fx:id="productTable" layoutX="13.0" layoutY="210.0" prefHeight="141.0"
        prefWidth="566.0">
        <columns>
          <!--added these columns to test and debug media classes-->
          <TableColumn prefWidth="75.0" text="Name"/>
          <TableColumn prefWidth="150.0" text="Manufacturer"/>
          <TableColumn prefWidth="75.0" text="Type"/>
        </columns>
      </TableView>
    </AnchorPane>
  </Tab>
  <Tab text="Produce">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
      <Label layoutX="14.0" layoutY="30.0" text="Choose Product"/>
      <ListView fx:id="produceList" layoutX="14.0" layoutY="53.0" prefHeight="200.0"
        prefWidth="572.0"/>
      <Label layoutX="14.0" layoutY="264.0" text="Choose Quantity"/>
      <ComboBox fx:id="produceCbo" layoutX="127.0" layoutY="260.0" prefWidth="150.0"/>
      <Button fx:id="produceBtn" layoutX="14" layoutY="307" mnemonicParsing="false"
        text="Record Production"
      />
    </AnchorPane>
  </Tab>
  <Tab text="Production Log">
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
      <TextArea fx:id="productLogTxt" layoutX="14.0" layoutY="14.0" prefHeight="345.0"
        prefWidth="573.0"/>
    </AnchorPane>
  </Tab>
</TabPane>
